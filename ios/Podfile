# Uncomment this line to define a global platform for your project
platform :ios, '16.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  # Resolve MLKitVision version conflict - use newer version that supports GoogleUtilities 8.0
  pod 'MLKitVision', '~> 8.0', :modular_headers => true
  pod 'MLKitCommon', '~> 12.0', :modular_headers => true
  
  # Force GoogleUtilities 8.1 to satisfy firebase_messaging and google_sign_in_ios
  pod 'GoogleUtilities', '~> 8.1', :modular_headers => true
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'
      # Fix architecture exclusion for simulator - allow arm64 for Apple Silicon simulators
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386'
    end
  end
  
  # Fix MLImage framework issue - it doesn't support Apple Silicon simulators properly
  # MLImage framework has device arm64 but not simulator arm64, causing linker errors
  # However, MLKitVision needs MLImage headers, so we keep search paths but use weak linking
  ['debug', 'release', 'profile'].each do |config_name|
    xcconfig_path = "Pods/Target Support Files/Pods-Runner/Pods-Runner.#{config_name}.xcconfig"
    if File.exist?(xcconfig_path)
      xcconfig_content = File.read(xcconfig_path)
      # Replace -framework "MLImage" with -weak_framework "MLImage"
      # This allows the linker to skip MLImage if it's incompatible (simulator arm64)
      # but keeps it available for device builds where it works fine
      xcconfig_content.gsub!(/-framework "MLImage"/, '-weak_framework "MLImage"')
      # Keep MLImage in FRAMEWORK_SEARCH_PATHS and OTHER_MODULE_VERIFIER_FLAGS
      # because MLKitVision needs the headers, even if we weak-link the framework
      # Clean up any double spaces that might result
      xcconfig_content.gsub!(/  +/, ' ')
      File.write(xcconfig_path, xcconfig_content)
    end
  end
end

